    <result column="third_payment_trade_no" property="thirdPaymentTradeNo" jdbcType="VARCHAR" />
    <result column="balance_amount" property="balanceAmount" jdbcType="DECIMAL" />
    <result column="business_type" property="businessType" jdbcType="BIGINT"/>
    <result column="third_payment_amount" property="thirdPaymentAmount" jdbcType="DECIMAL" />
    <result column="third_payment_channel" property="thirdPaymentTypeV3" javaType="OrderPayTypeV3" />
    <result column="third_payment_id" property="thirdPaymentId" jdbcType="BIGINT" />
    <result column="pay_time" property="payTime" jdbcType="TIMESTAMP" />
    <result column="create_time" property="createTime" jdbcType="TIMESTAMP" />
    <result column="last_update_time" property="lastUpdateTime" jdbcType="TIMESTAMP" />
    <result column="expire_time" property="expireTime" jdbcType="TIMESTAMP" />
    <result column="trade_id" property="tradeId" jdbcType="VARCHAR" />
    <result column="remote_ip" property="remoteIp" jdbcType="VARCHAR" />
    <result column="order_pay_time" property="orderPayTime" jdbcType="TIMESTAMP" />
	  <result column="installment_poundage_price" property="installmentPoundagePrice" jdbcType="DECIMAL"/>
	  <result column="stage_num" property="stageNum" jdbcType="INTEGER"/>
	  <result column="installment_poundage_rate" property="installmentPoundageRate" jdbcType="DECIMAL"/>
	  <result column="installment_poundage_config_id" property="installmentPoundageConfigId" jdbcType="BIGINT"/>
      <result column="payment_account_no" property="paymentAccountNo" jdbcType="VARCHAR"/>
      <result column="unwithdrawable_balance_amount" property="unWithdrawableBalanceAmount" jdbcType="DOUBLE"/>
  </resultMap>
  
  <sql id="Base_Column_List" >
    id, student_id, related_order_id, related_order_type, qingqing_trade_no, third_payment_trade_no, 
    balance_amount, business_type, third_payment_amount, third_payment_channel, third_payment_id, 
    pay_time, create_time, last_update_time, expire_time, trade_id, remote_ip, order_pay_time,
    installment_poundage_price,stage_num,installment_poundage_rate,installment_poundage_config_id, payment_account_no, unwithdrawable_balance_amount
  </sql>

  <select id="findByQingQingTradeNo" resultMap="BaseResultMap" parameterType="java.lang.String" >
    select 
    <include refid="Base_Column_List" />
    from t_third_pay_brief
    where qingqing_trade_no = #{qingqingTradeNo,jdbcType=VARCHAR}
  </select>

    <select id="selectListByOrderIdAndOrderType" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List" />
        from t_third_pay_brief
        where related_order_id = #{relatedOrderId,jdbcType=BIGINT}
        and related_order_type = #{relatedOrderType, jdbcType=INTEGER}
    </select>
</mapper>